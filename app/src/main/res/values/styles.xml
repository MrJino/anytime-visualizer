<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="setting_info_text">
		<item name="android:textSize">12sp</item>
		<item name="android:textColor">#ffffff</item>		
		<item name="android:gravity">center</item>
	</style>

	<style name="Theme.MyTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	<!-- The rest of your attributes -->
	</style>

	<style name="AudioItemLayout">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:paddingStart">10dp</item>
		<item name="android:paddingEnd">10dp</item>
	</style>

	<style name="AudioItemIcon">
		<item name="android:layout_width">30dp</item>
		<item name="android:layout_height">30dp</item>
	</style>

	<style name="AudioItemTitle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="AudioItemSubTitle">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">10sp</item>
	</style>
</resources>
