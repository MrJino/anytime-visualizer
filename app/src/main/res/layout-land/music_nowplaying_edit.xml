<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
   	android:layout_height="match_parent"
   	android:gravity="right"
   	android:orientation="vertical">
   	<RelativeLayout 
        android:id="@+id/music_layout_togglebutton"
        android:layout_width="match_parent"
    	android:layout_height="0dip"
    	android:layout_weight="1">
    	<RelativeLayout 
    	    android:id="@+id/music_layout_cover"
	        android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:background="@android:color/black"
	    	android:visibility="invisible">
	    	<RelativeLayout 
	            android:layout_width="match_parent"
	        	android:layout_height="5dip"
	        	android:layout_marginLeft="3dip"
	        	android:layout_marginStart="3dip"
	        	android:background="@color/theme_blue"/>
	    	<TextView 
	            android:layout_centerInParent="true"
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	            android:text="@string/music_adding_tonowplay"
		    	android:textSize="16sp"
		    	android:textColor="@android:color/white"/>
	   	</RelativeLayout>
   </RelativeLayout>
   <LinearLayout 
        android:layout_width="wrap_content"
    	android:layout_height="40dip"
    	android:layout_marginRight="10dip"
    	android:layout_marginEnd="10dip"
    	android:orientation="horizontal">
    	<TextView 
	        android:id="@+id/mini_nowplaying_info"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:gravity="center_vertical"
	        android:textSize="16sp"
	        android:layout_marginLeft="15dip"
	        android:layout_marginStart="15dip"
	        android:textColor="#ffffff"
	        android:singleLine="true"/>
   	</LinearLayout>
       <LinearLayout 
        android:layout_width="wrap_content"
    	android:layout_height="60dip"
    	android:orientation="horizontal">
	    <ImageButton 
	        android:id="@+id/music_button_resetnowplay"
	        android:layout_width="50dip"
	    	android:layout_height="50dip"
	    	android:layout_marginEnd="10dip"
	    	android:layout_marginRight="10dip"
	    	android:src="@drawable/music_button_clear"
	    	android:background="@drawable/menu_ring_bg"
	    	android:contentDescription="@string/music_button_reset" />
	    <ImageButton 
	        android:id="@+id/music_button_playall"
	        android:layout_width="50dip"
	    	android:layout_height="50dip"
	    	android:layout_marginEnd="10dip"    	
	    	android:layout_marginRight="10dip"
	    	android:src="@drawable/music_button_all"
	    	android:background="@drawable/menu_ring_bg"
	    	android:contentDescription="@string/music_button_playall"/>
	    <ImageButton 
	        android:id="@+id/music_button_addtonowplay"
	        android:layout_width="50dip"
	    	android:layout_height="50dip"
	    	android:layout_marginEnd="10dip"
	    	android:layout_marginRight="10dip"
	    	android:src="@drawable/music_button_add"
	    	android:background="@drawable/menu_ring_bg"
	    	android:contentDescription="@string/music_button_add"/>
    </LinearLayout>
</LinearLayout>