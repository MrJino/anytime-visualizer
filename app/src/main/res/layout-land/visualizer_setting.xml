<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#70000000"
    android:orientation="vertical"
    android:layout_marginLeft="3dip"
    android:layout_marginStart="3dip"
    android:layout_marginRight="3dip"
    android:layout_marginEnd="3dip" >
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical"
    	android:padding="5dip">
    	<LinearLayout
    	    android:id="@+id/music_setting_albumart_layout"
    	    android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:gravity="center_vertical"
    		android:layout_margin="2dip">
    		<RelativeLayout
    		    android:layout_width="44dip"
    		    android:layout_height="44dip"
    		    android:orientation="vertical">
	    		<ImageView
			   	    android:id="@+id/music_setting_albumart"
			   	    android:layout_width="44dip" 
			   	    android:layout_height="44dip"/>
	    		<TextView 
    		        android:layout_width="match_parent" 
			   	    android:layout_height="16dip"
			   	    android:text="@string/music_albumart_size"
			   	    android:textColor="@android:color/white"
			   	    android:textStyle="bold"
			   	    android:textSize="12sp"
			   	    android:background="#a0000000"
			   	    android:gravity="center"
			   	    android:layout_alignParentBottom="true"/>
	    	</RelativeLayout>
    		<SeekBar 
    		    android:id="@+id/music_setting_albumart_seekbar"
    		    android:layout_width="match_parent" 
		   	    android:layout_height="wrap_content"
		   	    android:layout_marginLeft="5dip"
		   	    android:layout_marginStart="5dip"/>
    	</LinearLayout>
    	<LinearLayout
    	    android:id="@+id/music_setting_background_layout"
    	    android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:gravity="center_vertical"
    		android:layout_margin="2dip">
    		<RelativeLayout
    		    android:layout_width="44dip"
    		    android:layout_height="44dip"
    		    android:orientation="vertical">
	    		<ImageView
			   	    android:id="@+id/music_setting_background"
			   	    android:layout_width="44dip" 
			   	    android:layout_height="44dip"/>
	    		<TextView 
    		        android:layout_width="match_parent" 
			   	    android:layout_height="16dip"
			   	    android:text="@string/music_background"
			   	    android:textColor="@android:color/white"
			   	    android:textStyle="bold"
			   	    android:textSize="12sp"
			   	    android:background="#a0000000"
			   	    android:gravity="center"
			   	    android:layout_alignParentBottom="true"/>
	    	</RelativeLayout>
    		<SeekBar 
    		    android:id="@+id/music_setting_background_seekbar"
    		    android:layout_width="match_parent" 
		   	    android:layout_height="wrap_content"
		   	    android:layout_marginLeft="5dip"
		   	    android:layout_marginStart="5dip"/>
    	</LinearLayout>    	
    	<LinearLayout
    	    android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:gravity="center_vertical"
    		android:layout_margin="2dip">
    		<RelativeLayout
    		    android:layout_width="44dip"
    		    android:layout_height="44dip"
    		    android:orientation="vertical">
    		    <ImageView
			   	    android:id="@+id/music_setting_visualizer"
			   	    android:src="@drawable/visualizer_icon"
			   	    android:layout_width="match_parent" 
			   	    android:layout_height="match_parent" />
    		    <TextView 
    		        android:id="@+id/music_tab_to_pick"
    		        android:layout_width="match_parent" 
			   	    android:layout_height="16dip"
			   	    android:text="@string/visualizer_setting_alpha"
			   	    android:textColor="@android:color/white"
			   	    android:textStyle="bold"
			   	    android:textSize="12sp"
			   	    android:background="#a0000000"
			   	    android:gravity="center"
			   	    android:layout_alignParentBottom="true"/>
    		</RelativeLayout>
    		<SeekBar 
    		    android:id="@+id/music_setting_visualizer_seekbar"
    		    android:layout_width="match_parent" 
		   	    android:layout_height="wrap_content"
		   	    android:layout_marginLeft="5dip"
		   	    android:layout_marginStart="5dip"/>
    	</LinearLayout>
    	<LinearLayout
    	    android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:gravity="center_vertical"
    		android:layout_margin="2dip">
    		<RelativeLayout
    		    android:layout_width="44dip"
    		    android:layout_height="44dip"
    		    android:orientation="vertical">
    		    <ImageView
			   	    android:src="@drawable/visualizer_icon"
			   	    android:layout_width="match_parent" 
			   	    android:layout_height="match_parent" />
    		    <TextView 
    		        android:layout_width="match_parent" 
			   	    android:layout_height="16dip"
			   	    android:text="@string/visualizer_setting_barsize"
			   	    android:textColor="@android:color/white"
			   	    android:textStyle="bold"
			   	    android:textSize="12sp"
			   	    android:background="#a0000000"
			   	    android:gravity="center"
			   	    android:layout_alignParentBottom="true"/>
    		</RelativeLayout>
    		<SeekBar 
    		    android:id="@+id/visualizer_size_seekbar"
    		    android:layout_width="match_parent" 
		   	    android:layout_height="wrap_content"
		   	    android:layout_marginLeft="5dip"
		   	    android:layout_marginStart="5dip"/>
    	</LinearLayout>
    	<LinearLayout
    	    android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:gravity="center_vertical"
    		android:layout_margin="2dip">
    		<RelativeLayout
    		    android:layout_width="44dip"
    		    android:layout_height="44dip"
    		    android:orientation="vertical">
    		    <ImageView
			   	    android:src="@drawable/visualizer_icon"
			   	    android:layout_width="match_parent" 
			   	    android:layout_height="match_parent" />
    		    <TextView 
    		        android:layout_width="match_parent" 
			   	    android:layout_height="16dip"
			   	    android:text="@string/visualizer_setting_color"
			   	    android:textColor="@android:color/white"
			   	    android:textStyle="bold"
			   	    android:textSize="12sp"
			   	    android:background="#a0000000"
			   	    android:gravity="center"
			   	    android:layout_alignParentBottom="true"/>
    		</RelativeLayout>
            <Button 
                android:id="@+id/setting_vi_color"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginStart="10dip"
	            android:layout_marginLeft="10dip"
	            android:layout_marginEnd="10dip"
	            android:layout_marginRight="0dip"
	            android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="3dip"
    	android:background="#4684e8"/>
</LinearLayout>
