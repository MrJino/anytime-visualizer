<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"    
    android:orientation="vertical"
    android:layout_margin="10dip">
    <LinearLayout 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:gravity="center_vertical">
    	<noh.jinil.app.anytime.setting.ColorPickerView
			android:id="@+id/color_picker_view"
			android:layout_width="100dip"
			android:layout_height="100dip"/>
    	<TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
        	android:layout_marginStart="10dip"
	        android:text="@string/music_color_setting_info"
	        android:textColor="#ffffff"
	        android:textSize="14sp"/>
    </LinearLayout>
    <ImageView 
        android:id="@+id/visualizer_preview1"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"  
   	    android:layout_marginTop="10dip"  	    
   	    android:src="@drawable/visualizer_preview1"/>
   	<ImageView 
   	    android:id="@+id/visualizer_preview2"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_marginTop="10dip"
   	    android:src="@drawable/visualizer_preview2"/>
   	<ImageView 
   	    android:id="@+id/visualizer_preview3"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_marginTop="10dip"
   	    android:src="@drawable/visualizer_preview2"/>
</LinearLayout>