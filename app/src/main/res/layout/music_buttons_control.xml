<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
	android:background="#151515"
	tools:ignore="contentDescription">
	<ImageView
		android:layout_width="60dip"
		android:layout_height="60dip" />
	<LinearLayout
		android:layout_width="0dip"
		android:layout_weight="1"
		android:layout_height="match_parent"
		android:gravity="center_vertical"
		android:orientation="vertical">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@android:color/white"
			android:textSize="15sp"
			android:text="TITLE"/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@android:color/white"
			android:textSize="12sp"
			android:text="ARTIST"/>
	</LinearLayout>
    <ImageButton
		android:id="@+id/music_control_prev"
		android:layout_width="40dip"
		android:layout_height="40dip"
		android:layout_margin="5dip"
		android:src="@drawable/music_button_prev"
		android:background="#00000000"
		android:visibility="gone"/>
    <ImageButton
		android:id="@+id/music_control_pauseresume"
		android:layout_width="40dip"
		android:layout_height="40dip"
		android:padding="5dip"
		android:scaleType="centerInside"
		android:src="@drawable/music_button_play"
		android:background="#00000000"  />
    <ImageButton
		android:id="@+id/music_control_next"
		android:layout_width="40dip"
		android:layout_height="40dip"
		android:layout_margin="5dip"
		android:src="@drawable/music_button_next"
		android:background="#00000000"
		android:visibility="gone"/>
</LinearLayout>
