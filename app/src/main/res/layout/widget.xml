<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ViewFlipper 
        android:id="@+id/viewflipper_onoff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inAnimation="@anim/widget_switch_in"
        android:outAnimation="@anim/widget_switch_out">
       	<LinearLayout 
       	    android:layout_width="match_parent"
       		android:layout_height="match_parent"
       		android:gravity="center_horizontal"
       		android:orientation="vertical">
       		<ImageButton 
        	    android:id="@+id/widget_visualizer_show"
	            android:layout_width="50dip"
	            android:layout_height="50dip"
	            android:layout_marginTop="6dip"
	            android:src="@drawable/widget_visualizer_off"/>
       		<TextView 
       		    android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center_vertical"
	            android:textSize="14sp"
	            android:textColor="#ffffff"
	            android:shadowColor="#FF464646"
			    android:shadowDx="2.0"
			    android:shadowDy="2.0"
			    android:shadowRadius="1.0"
	            android:text="@string/visualizer_off"/>
       	</LinearLayout>
       	<LinearLayout 
       	    android:layout_width="match_parent"
       		android:layout_height="match_parent"
       		android:gravity="center_horizontal"
       		android:orientation="vertical">
            <ImageButton 
                android:id="@+id/widget_visualizer_hide"
	            android:layout_width="50dip"
	            android:layout_height="50dip"
	            android:layout_marginTop="6dip"
	            android:src="@drawable/widget_visualizer_on"/>
           	<TextView 
       		    android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:gravity="center_vertical"
	            android:textSize="14sp"
	            android:textColor="#ffffff"
	            android:shadowColor="#FF464646"
			    android:shadowDx="2.0"
			    android:shadowDy="2.0"
			    android:shadowRadius="1.0"
	            android:text="@string/visualizer_on"/>
         </LinearLayout>
    </ViewFlipper>
</LinearLayout>
