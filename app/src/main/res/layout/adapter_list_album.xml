<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/library_list_adapter_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dip"
    android:background="@drawable/library_adapter_list_background"
    tools:ignore="contentDescription">

    <ImageView
        android:id="@+id/adapter_list_album_albumArt"
        android:layout_width="120dip"
        android:layout_height="120dip"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/adapter_list_album_albumName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/library_adapter_list_text"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="center"/>

    <TextView
        android:id="@+id/adapter_list_album_artistName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/library_adapter_list_text"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="center"/>

</LinearLayout>